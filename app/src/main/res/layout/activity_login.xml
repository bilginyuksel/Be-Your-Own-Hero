<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#6A5ACD"
    android:weightSum="1"
    tools:context=".ActivityInterests"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:gravity="top"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Be Your Own Hero"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textSize="40dp"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_button_gray"
        android:text="How are you feeling today ? "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="71dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/imgButtonWordofDay"
            android:background="@drawable/motivation_1" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:id="@+id/btnAlarm"
            android:background="@drawable/alarm_clock" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:id="@+id/btnProfile"
            android:background="@drawable/girl" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/reminder" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/radius_layout">
     <ListView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/lstView"
         android:padding="10dp">

     </ListView>

    </LinearLayout>

</LinearLayout>
